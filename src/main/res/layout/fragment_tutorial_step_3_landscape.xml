<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorial_step_3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_black_overlay30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tutorial_step_3_header"
                android:id="@+id/text_slogan"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="@style/text_shadow"
                android:layout_alignTop="@+id/step_image"
                android:layout_toRightOf="@id/step_image"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/step_image"
                android:src="@drawable/leave_512px"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tutorial_step_3_info_1"
                android:id="@+id/step_info_1"
                android:gravity="center"
                android:textColor="@color/white"
                style="@style/text_shadow"
                android:layout_below="@+id/text_slogan"
                android:layout_toRightOf="@+id/step_image"
                android:layout_toEndOf="@+id/step_image" />

            <TextView
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tutorial_step_3_info_2"
                android:id="@+id/step_info_2"
                android:gravity="center"
                android:textColor="@color/white"
                style="@style/text_shadow"
                android:layout_below="@+id/step_info_1"
                android:layout_toRightOf="@+id/step_image"
                android:layout_toEndOf="@+id/step_image"/>


        </RelativeLayout>

    </FrameLayout>

</FrameLayout>